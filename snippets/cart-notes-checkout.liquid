  .checkout-notes-info {
    background: #f5f5f5;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 2rem;
    border:  1px solid #e0e0e0;
  }

  .checkout-notes-info h3 {
    margin-top: 0;
