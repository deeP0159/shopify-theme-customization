<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Retrieve and display cart notes at checkout
    const cartNotes = JSON.parse(sessionStorage.getItem('cart_notes') || '{}');
    
    // Display notes information
    if (Object.keys(cartNotes).length > 0) {
      const notesInfo = document.createElement('div');
      notesInfo.className = 'checkout-notes-info';
      notesInfo.innerHTML = '<h3>Order Notes</h3>';
      
      Object.entries(cartNotes).forEach(([key, note]) => {
        if (note. trim()) {
          notesInfo. innerHTML += `<p><strong>Item ${key}:</strong> ${note}</p>`;
        }
      });
      
      // Append to checkout form
      const checkoutForm = document.querySelector('form');
      if (checkoutForm) {
        checkoutForm.insertBefore(notesInfo, checkoutForm.firstChild);
      }
    }
  });
</script>

