<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      {{ shop.name }}
      Gift Card
    </title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
      }

      . gift-card-container {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
      }

      .gift-card-header {
        text-align: center;
        margin-bottom: 2rem;
      }

      .gift-card-title {
        font-size: 2rem;
        font-weight: 700;
        color: #000;
        margin-bottom: 0.5rem;
      }

      .gift-card-amount {
        font-size: 1.5rem;
        color: #667eea;
        font-weight: 600;
      }

      .gift-card-code {
        background: #f5f5f5;
        padding: 1rem;
        border-radius: 8px;
        margin: 1.5rem 0;
        text-align: center;
      }

      .code {
        font-family: monospace;
        font-size: 1.25rem;
        font-weight: 600;
        letter-spacing: 2px;
        color: #000;
      }

      .copy-button {
        background: #667eea;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        margin-top: 1rem;
        width: 100%;
        transition: background 0.3s;
      }

      .copy-button:hover {
        background: #764ba2;
      }

      .gift-card-footer {
        text-align: center;
        color: #666;
        font-size: 0.9rem;
        margin-top: 2rem;
      }
    </style>
  </head>
  <body>
    <div class="gift-card-container">
      <div class="gift-card-header">
        <h1 class="gift-card-title">{{ shop.name }}</h1>
        <p class="gift-card-amount">{{ gift_card.balance | money }}</p>
      </div>

      <div class="gift-card-code">
        <p class="code">{{ gift_card.code }}</p>
      </div>

      <button class="copy-button" onclick="copyToClipboard('{{ gift_card.code }}')">Copy Code</button>

      <div class="gift-card-footer">
        <p>This gift card can be used for any purchase on {{ shop.url }}</p>
      </div>
    </div>

    <script>
      function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(() => {
          alert('Gift card code copied! ');
        });
      }
    </script>
  </body>
</html>
